# =========================
# General
# =========================
APP_NAME=auth-service
ENV=production
DEBUG=False
PORT=8001

# =========================
# PostgreSQL (Sharded / Replicated)
# =========================
DB_HOST=postgres-primary.example.com
DB_PORT=5432
DB_USER=auth_user
DB_PASSWORD=strong_db_password
DB_NAME=auth_db
DB_POOL_MIN=10
DB_POOL_MAX=50

# Optional read replicas
DB_REPLICA1_HOST=postgres-replica1.example.com
DB_REPLICA2_HOST=postgres-replica2.example.com

# =========================
# Redis Cluster
# =========================
REDIS_HOST=redis-cluster.example.com
REDIS_PORT=6379
REDIS_PASSWORD=strong_redis_password
REDIS_DB=0
REDIS_CACHE_TTL=3600   # seconds

# =========================
# JWT / Auth
# =========================
JWT_SECRET_KEY=super_secret_jwt_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# =========================
# OAuth / Social Logins
# =========================
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
OAUTH_REDIRECT_URI=https://auth.example.com/oauth/callback

# =========================
# Email / Notifications
# =========================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=no-reply@example.com
EMAIL_PASSWORD=email_password
EMAIL_FROM=no-reply@example.com

# =========================
# Logging / Monitoring
# =========================
LOG_LEVEL=INFO
PROMETHEUS_METRICS_PATH=/metrics
